{
  "name": "textify",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "vite dev",
    "dev:cf": "wrangler dev",
    "gen:cf": "wrangler types",
    "build": "vite build",
    "deploy": "wrangler deploy",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "test:unit": "bun test **/*.test.ts --exclude **/*.test.tsx --exclude **/components/**/*.test.ts",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "lint:check": "eslint . --ext .ts,.tsx,.js,.jsx --max-warnings 0",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\""
  },
  "dependencies": {
    "@hono/standard-validator": "^0.1.5",
    "@hono/swagger-ui": "^0.5.2",
    "@tanstack/react-router": "^1.132.7",
    "hono": "^4.9.9",
    "hono-openapi": "^1.0.8",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@cloudflare/vite-plugin": "^1.13.7",
    "@eslint/js": "^9.36.0",
    "@tailwindcss/vite": "^4.1.13",
    "@tanstack/router-plugin": "^1.132.7",
    "@types/jsdom": "^21.1.6",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "@vitejs/plugin-react-swc": "^4.1.0",
    "eslint": "^9.36.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "jsdom": "^23.2.0",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "tailwindcss": "^4.1.13",
    "vite": "^7.1.7",
    "vite-tsconfig-paths": "^5.1.4",
    "wrangler": "^4.40.2"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
