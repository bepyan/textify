{
  "name": "textify",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "concurrently \"bun run dev:frontend && cd ..\" \"bun run dev:server\"",
    "dev:frontend": "cd frontend && bun run dev && cd ..",
    "dev:server": "bun run --hot server/index.ts",
    "build": "cd frontend && bun run build && cd ..",
    "serve": "bun run server/index.ts"
  },
  "dependencies": {
    "@hono/standard-validator": "^0.1.5",
    "@hono/swagger-ui": "^0.5.2",
    "hono": "^4.9.9",
    "hono-openapi": "^1.0.8",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "concurrently": "^9.2.1",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.3.0",
    "prettier-plugin-tailwindcss": "^0.6.14"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
